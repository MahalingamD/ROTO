<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/inflate_product_detail_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inflate_product_name_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/futura_bold"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_32" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/margin_10">

                <RelativeLayout
                    android:layout_width="@dimen/product_layout_width"
                    android:layout_height="@dimen/product_layout_height"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_green_design"
                    android:backgroundTint="@color/light_gray">

                    <ImageView
                        android:id="@+id/inflate_product_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/product_height"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_20"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo" />

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin_10"
                android:weightSum="@integer/int_three">

                <!--first_item-->
                <LinearLayout
                    android:id="@+id/first_product_root_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="@integer/int_one"
                    android:gravity="center">

                    <!--Big-->
                    <RelativeLayout
                        android:id="@+id/first_product_medium_layout"
                        android:layout_width="@dimen/product_medium_layout_width"
                        android:layout_height="@dimen/product_medium_layout_height"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_green_design"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/first_product_medium_image"
                            android:layout_width="@dimen/product_medium_image_width"
                            android:layout_height="@dimen/product_medium_image_height"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_10"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logo" />

                    </RelativeLayout>

                    <!--Small-->
                    <RelativeLayout
                        android:id="@+id/first_product_small_layout"
                        android:layout_width="@dimen/product_small_layout_width"
                        android:layout_height="@dimen/product_small_layout_height"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_green_design"
                        android:backgroundTint="@color/light_gray"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/first_product_small_image"
                            android:layout_width="@dimen/product_small_image_width"
                            android:layout_height="@dimen/product_small_image_height"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_10"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logo" />
                    </RelativeLayout>

                </LinearLayout>

                <!--Second_item-->
                <LinearLayout
                    android:id="@+id/second_product_root_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="@integer/int_one"
                    android:gravity="center">

                    <!--Small-->
                    <RelativeLayout
                        android:id="@+id/second_product_small_layout"
                        android:layout_width="@dimen/product_small_layout_width"
                        android:layout_height="@dimen/product_small_layout_height"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_green_design"
                        android:backgroundTint="@color/light_gray"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/second_product_small_image"
                            android:layout_width="@dimen/product_small_image_width"
                            android:layout_height="@dimen/product_small_image_height"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_10"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logo" />
                    </RelativeLayout>

                    <!--Big-->
                    <RelativeLayout
                        android:id="@+id/second_product_medium_layout"
                        android:layout_width="@dimen/product_medium_layout_width"
                        android:layout_height="@dimen/product_medium_layout_height"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_green_design"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/second_product_medium_image"
                            android:layout_width="@dimen/product_medium_image_width"
                            android:layout_height="@dimen/product_medium_image_height"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_10"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logo" />
                    </RelativeLayout>


                </LinearLayout>

                <!--Third_item-->
                <LinearLayout
                    android:id="@+id/third_product_root_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="@integer/int_one"
                    android:gravity="center">

                    <!--Small-->
                    <RelativeLayout
                        android:id="@+id/third_product_small_layout"
                        android:layout_width="@dimen/product_small_layout_width"
                        android:layout_height="@dimen/product_small_layout_height"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_green_design"
                        android:backgroundTint="@color/light_gray"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/third_product_small_image"
                            android:layout_width="@dimen/product_small_image_width"
                            android:layout_height="@dimen/product_small_image_height"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_10"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logo" />
                    </RelativeLayout>

                    <!--Big-->
                    <RelativeLayout
                        android:id="@+id/third_product_medium_layout"
                        android:layout_width="@dimen/product_medium_layout_width"
                        android:layout_height="@dimen/product_medium_layout_height"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_green_design"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/third_product_medium_image"
                            android:layout_width="@dimen/product_medium_image_width"
                            android:layout_height="@dimen/product_medium_image_height"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_10"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logo" />

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="@integer/int_two">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="@integer/int_one"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/product_detail_image_height"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_versatile" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futura_book"
                        android:gravity="center"
                        android:text="@string/label_versatile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_18" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/int_one"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/product_detail_image_height"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_tough" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futura_book"
                        android:gravity="center"
                        android:text="@string/label_tough"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_18" />
                </LinearLayout>


            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/myProductDetail_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/white"
                tools:listitem="@layout/product_item_view_item" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>