<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_height"
    android:background="@color/yellow_green"
    android:orientation="vertical"
    android:padding="@dimen/margin_16">

    <ImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="@dimen/toolbar_logo_width"
        android:layout_height="@dimen/toolbar_logo_height"
        android:layout_marginTop="@dimen/margin_40"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/header_name"
        style="@style/TextStyle.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:text="" />

    <TextView
        android:id="@+id/header_mobile_fragment"
        style="@style/TextStyle.Title.Sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:text=""
        android:textStyle="bold" />

</LinearLayout>