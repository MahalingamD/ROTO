<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/laguage_circle_width"
    android:layout_height="@dimen/laguage_circle_height"
    android:layout_margin="@dimen/margin_5"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/border_color"
    app:cardCornerRadius="@dimen/margin_50"
    app:cardElevation="@dimen/margin_5">

    <LinearLayout
        android:id="@+id/language_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_1"
        android:background="@drawable/circle_white_design"
        android:gravity="center">

        <TextView
            android:id="@+id/lanuguage_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>


</android.support.v7.widget.CardView>