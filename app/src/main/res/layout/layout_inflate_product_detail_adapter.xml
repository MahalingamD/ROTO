<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/inflate_layout_root_lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/inflate_layout_season_list_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_height_180"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/inflate_layout_Product_name_TXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/font_32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inflate_layout_Product_Size_TXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_light"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/font_22" />
    </LinearLayout>


</LinearLayout>